# .env.example
# Server Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000
LOG_LEVEL=info
SESSION_TIMEOUT=30 # Minutes

# LiveKit Configuration
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret
LIVEKIT_URL=ws://localhost:7880

# LLM Configuration
LLM_TYPE=mistral # 'mistral' or 'openai'
LLM_API_KEY=your_api_key
LLM_MODEL=mistral-7b-instruct-v0.2
# Optional base URL if using a different endpoint
# LLM_API_BASE_URL=https://api.mistral.ai/v1

# STT (Speech-to-Text) Configuration
STT_PROVIDER=deepgram # 'deepgram', 'openai_whisper', etc.
STT_API_KEY=your_stt_api_key
DEEPGRAM_MODEL=nova-2-general # Example for Deepgram

# TTS (Text-to-Speech) Configuration
TTS_PROVIDER=elevenlabs # 'elevenlabs', 'google_tts', etc.
TTS_API_KEY=your_tts_api_key
ELEVENLABS_VOICE_ID=your_elevenlabs_voice_id # Example for ElevenLabs

# AI Participant Configuration
AI_PARTICIPANT_IDENTITY=ai-interviewer
AI_PARTICIPANT_NAME="AI Interviewer"

# RTMP Server (for LiveKit Egress if used for server-side STT)
RTMP_SERVER_URL=rtmp://localhost:1935/live